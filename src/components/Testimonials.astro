---
import testimonialsData from '../data/testimonials.json';

const { testimonials, stats } = testimonialsData;
const featuredTestimonials = testimonials.slice(0, 6); // Show first 6 testimonials
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          What Our Customers Say
        </h2>
        <p class="text-xl text-gray-700 mb-8">
          Join over {stats.totalCustomers} satisfied customers who trust us with their international driving needs
        </p>
        
        <!-- Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12">
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600 mb-2">{stats.totalCustomers}</div>
            <div class="text-gray-600 text-sm">Happy Customers</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-green-600 mb-2">{stats.averageRating}★</div>
            <div class="text-gray-600 text-sm">Average Rating</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-purple-600 mb-2">{stats.countries}</div>
            <div class="text-gray-600 text-sm">Countries Covered</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-orange-600 mb-2">{stats.processingTime}</div>
            <div class="text-gray-600 text-sm">Processing Time</div>
          </div>
        </div>
      </div>

      <!-- Testimonials Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        {featuredTestimonials.map((testimonial, index) => (
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-6 hover:shadow-xl transition-shadow duration-300">
            <!-- Header -->
            <div class="flex items-center mb-4">
              <!-- Avatar -->
              <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center text-white font-semibold mr-4">
                {testimonial.avatar}
              </div>
              
              <!-- Name and Location -->
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900">{testimonial.name}</h3>
                <p class="text-sm text-gray-600">{testimonial.location}</p>
              </div>

              <!-- Verified Badge -->
              {testimonial.verified && (
                <div class="text-green-600" title="Verified Customer">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              )}
            </div>

            <!-- Rating -->
            <div class="flex items-center mb-4">
              {Array.from({ length: testimonial.rating }).map((_, starIndex) => (
                <svg class="w-4 h-4 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              ))}
              <span class="text-sm text-gray-600 ml-2">
                Trip to {testimonial.tripDestination}
              </span>
            </div>

            <!-- Review Text -->
            <blockquote class="text-gray-700 italic leading-relaxed mb-4">
              "{testimonial.text}"
            </blockquote>

            <!-- Date -->
            <div class="text-xs text-gray-500">
              {new Date(testimonial.date).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </div>
          </div>
        ))}
      </div>

      <!-- Trustpilot-style Overall Rating -->
      <div class="text-center bg-white rounded-lg shadow-lg border border-gray-100 p-8">
        <div class="flex items-center justify-center mb-4">
          <span class="text-lg font-semibold text-gray-900 mr-4">Excellent</span>
          <div class="flex items-center">
            {Array.from({ length: 5 }).map((_, starIndex) => (
              <svg class="w-6 h-6 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>
          <span class="text-lg font-bold text-gray-900 ml-4">{stats.averageRating}</span>
        </div>
        
        <p class="text-gray-600 mb-4">
          Based on {stats.totalCustomers} reviews | 
          <svg class="w-4 h-4 inline text-green-600 mx-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Verified Reviews
        </p>

        <!-- CTA -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a 
            href="/pricing" 
            class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors font-semibold"
          >
            Get Your IDP Now
          </a>
          <a 
            href="#all-reviews" 
            class="text-blue-600 hover:text-blue-800 font-medium flex items-center"
            onclick="showAllReviews(event)"
          >
            Read More Reviews
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- All Reviews (Hidden by default) -->
      <div id="all-reviews" class="hidden mt-12">
        <h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">All Customer Reviews</h3>
        <div class="grid md:grid-cols-2 gap-6">
          {testimonials.slice(6).map((testimonial, index) => (
            <div class="bg-white rounded-lg shadow-md border border-gray-100 p-6">
              <!-- Header -->
              <div class="flex items-center mb-3">
                <!-- Avatar -->
                <div class="w-10 h-10 bg-gray-600 rounded-full flex items-center justify-center text-white font-semibold mr-3 text-sm">
                  {testimonial.avatar}
                </div>
                
                <!-- Name and Location -->
                <div class="flex-1">
                  <h4 class="font-medium text-gray-900 text-sm">{testimonial.name}</h4>
                  <p class="text-xs text-gray-600">{testimonial.location} • {testimonial.tripDestination}</p>
                </div>

                <!-- Rating -->
                <div class="flex items-center">
                  {Array.from({ length: testimonial.rating }).map((_, starIndex) => (
                    <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  ))}
                </div>
              </div>

              <!-- Review Text -->
              <blockquote class="text-gray-700 text-sm leading-relaxed mb-3">
                "{testimonial.text}"
              </blockquote>

              <!-- Date -->
              <div class="text-xs text-gray-500">
                {new Date(testimonial.date).toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'short', 
                  day: 'numeric' 
                })}
              </div>
            </div>
          ))}
        </div>
        
        <!-- Hide Reviews Button -->
        <div class="text-center mt-8">
          <button 
            onclick="hideAllReviews()"
            class="text-blue-600 hover:text-blue-800 font-medium flex items-center mx-auto"
          >
            Show Less Reviews
            <svg class="w-4 h-4 ml-1 transform rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function showAllReviews(event) {
    event.preventDefault();
    const allReviews = document.getElementById('all-reviews');
    allReviews.classList.remove('hidden');
    allReviews.scrollIntoView({ behavior: 'smooth', block: 'start' });
  }

  function hideAllReviews() {
    const allReviews = document.getElementById('all-reviews');
    allReviews.classList.add('hidden');
    // Scroll back to main testimonials section
    allReviews.previousElementSibling.scrollIntoView({ behavior: 'smooth', block: 'start' });
  }
</script>