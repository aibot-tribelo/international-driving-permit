                <h3 class="text-lg font-bold text-gray-900 mb-4">Other {region} Countries</h3>
                <div class="space-y-3">
                  {Object.values(countriesData.regions).find(r => r.name === region)?.countries
                    .filter(c => c.slug !== country.slug)
                    .slice(0, 5)
                    .map(relatedCountry => (
                      <a 
                        href={`/countries/${relatedCountry.slug}`}
                        class="block p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
                      >
                        <div class="flex items-center">
                          <span class="text-2xl mr-3" role="img" aria-label={`${relatedCountry.name} flag`}>
                            {relatedCountry.code === 'GB' ? 'ğŸ‡¬ğŸ‡§' : 
                             relatedCountry.code === 'US' ? 'ğŸ‡ºğŸ‡¸' : 
                             relatedCountry.code === 'FR' ? 'ğŸ‡«ğŸ‡·' :
                             relatedCountry.code === 'DE' ? 'ğŸ‡©ğŸ‡ª' :
                             relatedCountry.code === 'ES' ? 'ğŸ‡ªğŸ‡¸' :
                             relatedCountry.code === 'IT' ? 'ğŸ‡®ğŸ‡¹' :
                             relatedCountry.code === 'AU' ? 'ğŸ‡¦ğŸ‡º' :
                             relatedCountry.code === 'CA' ? 'ğŸ‡¨ğŸ‡¦' :
                             relatedCountry.code === 'JP' ? 'ğŸ‡¯ğŸ‡µ' :
                             'ğŸŒ'}
                          </span>
                          <div>
                            <div class="font-medium text-gray-900">{relatedCountry.name}</div>
                            <div class="text-sm text-gray-600">{relatedCountry.capital}</div>
                          </div>
                        </div>
                      </a>
                    ))}
                </div>
                <a 
                  href="/countries" 
                  class="block mt-4 text-center text-blue-600 hover:text-blue-800 font-medium text-sm"
                >
                  View All Countries â†’
                </a>
              </div>

              <!-- Quick Facts -->
              <div class="bg-gray-50 rounded-lg border border-gray-200 p-6">
                <h3 class="text-lg font-bold text-gray-900 mb-4">Quick Facts</h3>
                <div class="space-y-3 text-sm">
                  <div class="flex justify-between">
                    <span class="text-gray-600">Region:</span>
                    <span class="font-medium">{region}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Traffic side:</span>
                    <span class="font-medium capitalize">{country.drivingSide}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">IDP required:</span>
                    <span class="font-medium text-green-600">Yes</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Max urban speed:</span>
                    <span class="font-medium">{country.speedLimits.urban}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Max highway speed:</span>
                    <span class="font-medium">{country.speedLimits.highway}</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
