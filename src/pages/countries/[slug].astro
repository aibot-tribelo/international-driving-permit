---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import countriesData from '../../data/countries.json';

export async function getStaticPaths() {
  const paths = [];
  
  Object.values(countriesData.regions).forEach(region => {
    region.countries.forEach(country => {
      paths.push({
        params: { slug: country.slug },
        props: { country, region: region.name }
      });
    });
  });
  
  return paths;
}

const { country, region } = Astro.props;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "TravelAction",
  "name": `Driving in ${country.name} with International Driving Permit`,
  "description": `Complete guide to driving in ${country.name} with your International Driving Permit. Requirements, regulations, and travel tips.`,
  "location": {
    "@type": "Country",
    "name": country.name,
    "addressCountry": country.code
  },
  "provider": {
    "@type": "Organization",
    "name": "International Driving Permit Authority"
  }
};

const pageTitle = `Driving in ${country.name} with IDP | International Driving Permit Guide`;
const pageDescription = `Essential guide for driving in ${country.name} with your International Driving Permit. Speed limits, requirements, and travel highlights for ${country.name}.`;
---

<Layout title={pageTitle} description={pageDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <Navigation />
  
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-white">
    <!-- Skip Navigation -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-blue-600 text-white px-4 py-2 rounded-md z-50">
      Skip to main content
    </a>

    <!-- Breadcrumb -->
    <nav class="bg-white border-b border-gray-200" aria-label="Breadcrumb">
      <div class="container mx-auto px-4 py-4">
        <ol class="flex items-center space-x-2 text-sm">
          <li>
            <a href="/" class="text-blue-600 hover:text-blue-800">Home</a>
          </li>
          <li>
            <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
          </li>
          <li>
            <a href="/countries" class="text-blue-600 hover:text-blue-800">Countries</a>
          </li>
