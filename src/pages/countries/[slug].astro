                      </svg>
                      <div>
                        <span class="text-gray-900 font-medium">{requirement}</span>
                        {requirement.includes('International Driving Permit') && (
                          <p class="text-sm text-gray-600 mt-1">
                            Must be accompanied by your original domestic license at all times
                          </p>
                        )}
                      </div>
                    </div>
                  ))}
                </div>

