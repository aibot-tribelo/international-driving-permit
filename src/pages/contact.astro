---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Contact Us - International Driving Permit Authority",
  "description": "Contact our support team for help with your International Driving Permit application. Available 24/7 via live chat, email, or phone.",
  "mainEntity": {
    "@type": "Organization",
    "name": "International Driving Permit Authority",
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+1-800-IDP-HELP",
      "email": "support@internationalautomobileauthority.com",
      "contactType": "customer service",
      "availableLanguage": ["English"],
      "hoursAvailable": "24/7"
    }
  }
};
---

<Layout 
  title="Contact Us - International Driving Permit Authority"
  description="Contact our support team for help with your International Driving Permit application. Available 24/7 via live chat, email, or phone."
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <Navigation />
  
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-white">
    <!-- Skip Navigation -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-blue-600 text-white px-4 py-2 rounded-md z-50">
      Skip to main content
    </a>

    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Contact Us</h1>
          <p class="text-xl md:text-2xl mb-8 opacity-90">
            Reach out with any questions you have about your International Driving Permit
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Content -->
    <section id="main-content" class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12">
            <!-- Contact Information -->
            <div class="space-y-8">
              <div>
                <h2 class="text-3xl font-bold text-gray-900 mb-6">Get in Touch</h2>
                <p class="text-lg text-gray-700 mb-8">
                  Feel free to contact us if you have any questions or require assistance. 
                  We're here to help with your International Driving Permit needs!
                </p>
              </div>

              <!-- Contact Methods -->
              <div class="grid gap-6">
                <!-- Phone -->
                <div class="flex items-start space-x-4 p-6 bg-white rounded-lg shadow-md border border-gray-100">
                  <div class="flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21L6.16 10.928c-.652.35-.677 1.259-.1 1.837l1.92 1.92c.578.577 1.487.552 1.837-.1l1.541-4.064a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Phone Support</h3>
                    <p class="text-gray-700 mb-1">
                      <a href="tel:+1-800-IDP-HELP" class="text-blue-600 hover:text-blue-800 transition-colors">
                        +1-800-IDP-HELP
                      </a>
                    </p>
                    <p class="text-sm text-gray-600">Available 24/7</p>
                  </div>
                </div>

                <!-- Email -->
                <div class="flex items-start space-x-4 p-6 bg-white rounded-lg shadow-md border border-gray-100">
                  <div class="flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 3.26a2 2 0 001.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Email Support</h3>
                    <p class="text-gray-700 mb-1">
                      <a href="mailto:support@internationalautomobileauthority.com" class="text-blue-600 hover:text-blue-800 transition-colors">
                        support@internationalautomobileauthority.com
                      </a>
                    </p>
                    <p class="text-sm text-gray-600">Response within 24 hours</p>
                  </div>
                </div>

                <!-- Live Chat -->
                <div class="flex items-start space-x-4 p-6 bg-white rounded-lg shadow-md border border-gray-100">
                  <div class="flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Live Chat</h3>
                    <p class="text-gray-700 mb-1">Instant help via live chat</p>
                    <p class="text-sm text-gray-600">Available 24/7</p>
                  </div>
                </div>
              </div>

              <!-- FAQ Link -->
              <div class="bg-blue-50 rounded-lg p-6 border border-blue-100">
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Common Questions?</h3>
                <p class="text-gray-700 mb-4">
                  Many questions are answered in our comprehensive FAQ section, including processing times, accepted countries, and renewal information.
                </p>
                <a href="/what-is-idp" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors">
                  Visit FAQ Section
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
              </div>
            </div>

            <!-- Contact Form -->
            <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-6">Send us a Message</h2>
              <ContactForm client:load />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Popular Destinations Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Popular Destinations</h2>
          <p class="text-lg text-gray-700 mb-8">
            Planning to drive abroad? Get your International Driving Permit easily and cost-effectively. 
            Drive or rent vehicles in more than 195 countries with our IDP.
          </p>
          
          <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-white rounded-lg shadow-md p-6 border border-gray-100">
              <h3 class="font-semibold text-gray-900 mb-2">Europe</h3>
              <p class="text-gray-600 text-sm mb-4">Drive across 44+ European countries</p>
              <a href="/countries#europe" class="text-blue-600 hover:text-blue-800 font-medium text-sm">
                View Countries →
              </a>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6 border border-gray-100">
              <h3 class="font-semibold text-gray-900 mb-2">Asia</h3>
              <p class="text-gray-600 text-sm mb-4">Explore Asian destinations</p>
              <a href="/countries#asia" class="text-blue-600 hover:text-blue-800 font-medium text-sm">
                View Countries →
              </a>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6 border border-gray-100">
              <h3 class="font-semibold text-gray-900 mb-2">Americas</h3>
              <p class="text-gray-600 text-sm mb-4">Road trip across the Americas</p>
              <a href="/countries#americas" class="text-blue-600 hover:text-blue-800 font-medium text-sm">
                View Countries →
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-blue-600">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Get Your International Driving Permit in less than 5 Minutes!
        </h2>
        <p class="text-xl text-blue-100 mb-8">
          Get your International Driving Permit quickly with our streamlined application. 
          Start your adventure today and enjoy the freedom of driving internationally.
        </p>
        <a 
          href="/pricing"
          class="inline-block bg-white text-blue-600 font-bold py-4 px-8 rounded-lg hover:bg-gray-100 transition-colors shadow-lg"
          role="button"
          aria-describedby="pricing-description"
        >
          Apply Now
        </a>
        <p id="pricing-description" class="sr-only">
          View pricing options for International Driving Permit
        </p>
      </div>
    </section>
  </main>

  <Footer />
</Layout>