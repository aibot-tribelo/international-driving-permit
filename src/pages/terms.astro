---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Terms of Service - International Driving Permit Authority",
  "description": "Read our terms of service for International Driving Permit applications, including user obligations, service limitations, and legal agreements.",
  "dateModified": "2026-02-08"
};
---

<Layout 
  title="Terms of Service - International Driving Permit Authority"
  description="Read our terms of service for International Driving Permit applications, including user obligations, service limitations, and legal agreements."
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <Navigation />
  
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-white">
    <!-- Skip Navigation -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-blue-600 text-white px-4 py-2 rounded-md z-50">
      Skip to main content
    </a>

    <!-- Header -->
    <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">Terms of Service</h1>
          <p class="text-xl opacity-90 mb-4">
            Legal terms and conditions for using our International Driving Permit services
          </p>
          <p class="text-sm opacity-75">
            Last updated: February 8, 2026
          </p>
        </div>
      </div>
    </section>

    <!-- Content -->
    <section id="main-content" class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <!-- Introduction -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Agreement to Terms</h2>
            <p class="text-gray-700 leading-relaxed mb-4">
              These Terms of Service ("Terms") govern your use of the International Driving Permit Authority 
              website and services operated by International Driving Permit Authority ("we," "our," or "us"). 
              By accessing or using our services, you agree to be bound by these Terms.
            </p>
            <p class="text-gray-700 leading-relaxed mb-4">
              If you disagree with any part of these Terms, then you may not access our services. 
              These Terms apply to all visitors, users, and others who access or use our services.
            </p>
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
              <p class="text-gray-700">
                <strong>Important:</strong> By proceeding with your International Driving Permit application, 
                you acknowledge that you have read, understood, and agree to these Terms of Service.
              </p>
            </div>
          </div>

          <!-- Service Description -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Description of Services</h2>
            <p class="text-gray-700 mb-4">
              International Driving Permit Authority provides services related to the application, 
              processing, and issuance of International Driving Permits (IDPs). Our services include:
            </p>
            <ul class="list-disc pl-6 text-gray-700 space-y-2">
              <li>Online IDP application processing</li>
              <li>Document verification and validation</li>
              <li>Digital IDP delivery via email</li>
              <li>Physical IDP booklet printing and shipping</li>
              <li>Customer support and order tracking</li>
              <li>Information and guidance on international driving requirements</li>
            </ul>
          </div>

          <!-- Eligibility Requirements -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Eligibility Requirements</h2>
            <p class="text-gray-700 mb-4">
              To use our services and apply for an International Driving Permit, you must:
            </p>
            <ul class="list-disc pl-6 text-gray-700 mb-6 space-y-2">
              <li>Be at least 18 years of age (or the minimum driving age in your jurisdiction)</li>
              <li>Hold a valid, current driving license from your country of residence</li>
              <li>Not have your driving license suspended, revoked, or expired</li>
              <li>Provide accurate and truthful information in your application</li>
              <li>Have the legal capacity to enter into binding agreements</li>
              <li>Not be prohibited from driving in your jurisdiction</li>
            </ul>

            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <h3 class="font-semibold text-gray-900 mb-2">Important Notice:</h3>
              <p class="text-gray-700">
                An International Driving Permit is NOT a substitute for your original driving license. 
                You must carry both documents when driving internationally. The IDP is a translation 
                of your domestic license and is only valid when accompanied by your original license.
              </p>
            </div>
          </div>

          <!-- User Obligations -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">User Obligations</h2>
            <p class="text-gray-700 mb-4">By using our services, you agree to:</p>

            <h3 class="text-lg font-semibold text-gray-900 mb-3">Provide Accurate Information</h3>
            <ul class="list-disc pl-6 text-gray-700 mb-6 space-y-2">
              <li>Submit truthful and complete information in your application</li>
              <li>Ensure all documents provided are authentic and current</li>
              <li>Update us promptly if any information changes</li>
              <li>Not impersonate another person or provide false identity</li>
            </ul>

            <h3 class="text-lg font-semibold text-gray-900 mb-3">Comply with Laws</h3>
            <ul class="list-disc pl-6 text-gray-700 mb-6 space-y-2">
              <li>Use the IDP only for legitimate driving purposes</li>
              <li>Comply with traffic laws and regulations in destination countries</li>
              <li>Respect the terms and validity period of your IDP</li>
              <li>Not use the IDP for fraudulent or illegal activities</li>
            </ul>

            <h3 class="text-lg font-semibold text-gray-900 mb-3">Website Usage</h3>
            <ul class="list-disc pl-6 text-gray-700 space-y-2">
              <li>Not attempt to hack, disrupt, or damage our website or systems</li>
              <li>Not use automated tools to access or scrape our content</li>
              <li>Respect intellectual property rights</li>
              <li>Not transmit viruses, spam, or malicious content</li>
            </ul>
          </div>

          <!-- Payment Terms -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Payment Terms</h2>
            
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Fees and Charges</h3>
            <ul class="list-disc pl-6 text-gray-700 mb-6 space-y-2">
              <li>All fees must be paid in full before processing begins</li>
              <li>Prices are displayed in USD unless otherwise specified</li>
              <li>Additional charges may apply for expedited processing or shipping</li>
              <li>Fees are subject to change; current prices apply at time of purchase</li>
            </ul>

            <h3 class="text-lg font-semibold text-gray-900 mb-3">Payment Methods</h3>
            <p class="text-gray-700 mb-4">We accept major credit cards, PayPal, and other secure payment methods.</p>

            <h3 class="text-lg font-semibold text-gray-900 mb-3">Refund Policy</h3>
            <ul class="list-disc pl-6 text-gray-700 space-y-2">
              <li><strong>Before Processing:</strong> Full refund available within 24 hours of application</li>
              <li><strong>Application Rejected:</strong> Full refund if your application doesn't meet requirements</li>
              <li><strong>After Issuance:</strong> No refunds once IDP is processed and delivered</li>
              <li><strong>Shipping Issues:</strong> Replacement or refund for lost/damaged shipments</li>
            </ul>
          </div>

          <!-- Service Limitations -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Service Limitations</h2>
            
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Processing Times</h3>
            <p class="text-gray-700 mb-4">
              While we strive to process applications quickly, processing times may vary based on:
            </p>
            <ul class="list-disc pl-6 text-gray-700 mb-6 space-y-2">
              <li>Document verification requirements</li>
              <li>High demand periods</li>
              <li>Technical issues or system maintenance</li>
              <li>Government processing requirements</li>
            </ul>

            <h3 class="text-lg font-semibold text-gray-900 mb-3">Geographic Restrictions</h3>
            <p class="text-gray-700 mb-4">
              Our services may not be available in all countries or jurisdictions. 
              We reserve the right to restrict or terminate services in certain regions 
              due to legal or regulatory requirements.
            </p>

            <h3 class="text-lg font-semibold text-gray-900 mb-3">IDP Validity</h3>
            <ul class="list-disc pl-6 text-gray-700 space-y-2">
              <li>IDPs are valid for one year from the date of issuance</li>
              <li>Recognition varies by destination country</li>
              <li>Some countries may require additional documentation</li>
              <li>Validity depends on maintaining a valid domestic license</li>
            </ul>
          </div>

          <!-- Intellectual Property -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Intellectual Property Rights</h2>
            <p class="text-gray-700 mb-4">
              The website, services, and all related content are protected by copyright, 
              trademark, and other intellectual property laws. This includes:
            </p>
            <ul class="list-disc pl-6 text-gray-700 mb-6 space-y-2">
              <li>Website design, layout, and functionality</li>
              <li>Text, graphics, images, and multimedia content</li>
              <li>Software, applications, and technical processes</li>
              <li>Trademarks, logos, and brand names</li>
            </ul>
            <p class="text-gray-700">
              You may not reproduce, distribute, modify, or create derivative works without 
              our express written permission.
            </p>
          </div>

          <!-- Privacy and Data Protection -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Privacy and Data Protection</h2>
            <p class="text-gray-700 mb-4">
              Your privacy is important to us. Our collection, use, and protection of your 
              personal information is governed by our Privacy Policy, which is incorporated 
              into these Terms by reference.
            </p>
            <p class="text-gray-700 mb-4">
              By using our services, you consent to the collection and use of your information 
              as described in our Privacy Policy.
            </p>
            <a href={`${base}/privacy`} class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
              Read our Privacy Policy
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </div>

          <!-- Disclaimers and Warranties -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Disclaimers and Warranties</h2>
            
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Service Availability</h3>
            <p class="text-gray-700 mb-4">
              We provide our services on an "as is" and "as available" basis. We do not warrant that:
            </p>
            <ul class="list-disc pl-6 text-gray-700 mb-6 space-y-2">
              <li>Our services will be uninterrupted or error-free</li>
              <li>All information on our website is accurate or complete</li>
              <li>Our services will meet your specific requirements</li>
              <li>Technical issues will never occur</li>
            </ul>

            <h3 class="text-lg font-semibold text-gray-900 mb-3">Third-Party Recognition</h3>
            <p class="text-gray-700 mb-4">
              While our IDPs are issued in compliance with international conventions, 
              we cannot guarantee acceptance by all authorities, rental companies, 
              or insurance providers in destination countries.
            </p>

            <h3 class="text-lg font-semibold text-gray-900 mb-3">Legal Advice Disclaimer</h3>
            <p class="text-gray-700">
              Information provided on our website is for general guidance only and 
              does not constitute legal advice. You should verify current requirements 
              with relevant authorities before traveling.
            </p>
          </div>

          <!-- Limitation of Liability -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Limitation of Liability</h2>
            <p class="text-gray-700 mb-4">
              To the maximum extent permitted by law, International Driving Permit Authority 
              and its affiliates shall not be liable for:
            </p>
            <ul class="list-disc pl-6 text-gray-700 mb-6 space-y-2">
              <li>Indirect, incidental, or consequential damages</li>
              <li>Loss of profits, data, or business opportunities</li>
              <li>Damages resulting from third-party actions or decisions</li>
              <li>Issues arising from incorrect information provided by users</li>
              <li>Delays in processing due to circumstances beyond our control</li>
            </ul>
            <p class="text-gray-700">
              Our total liability to you shall not exceed the amount you paid for our services.
            </p>
          </div>

          <!-- Indemnification -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Indemnification</h2>
            <p class="text-gray-700">
              You agree to indemnify and hold harmless International Driving Permit Authority, 
              its officers, directors, employees, and agents from any claims, damages, or expenses 
              (including reasonable attorneys' fees) arising from:
            </p>
            <ul class="list-disc pl-6 text-gray-700 mt-4 space-y-2">
              <li>Your use of our services</li>
              <li>Your violation of these Terms</li>
              <li>Your violation of any rights of another party</li>
              <li>Any false or misleading information you provide</li>
            </ul>
          </div>

          <!-- Governing Law -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Governing Law and Dispute Resolution</h2>
            <p class="text-gray-700 mb-4">
              These Terms shall be governed by and construed in accordance with the laws 
              of [Jurisdiction], without regard to its conflict of law provisions.
            </p>
            <p class="text-gray-700 mb-4">
              Any disputes arising under these Terms shall be resolved through:
            </p>
            <ol class="list-decimal pl-6 text-gray-700 space-y-2">
              <li>Good faith negotiation between the parties</li>
              <li>Mediation if negotiation fails</li>
              <li>Binding arbitration as a final resort</li>
            </ol>
          </div>

          <!-- Termination -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Termination</h2>
            <p class="text-gray-700 mb-4">
              We may terminate or suspend your access to our services immediately, 
              without prior notice, for any reason including:
            </p>
            <ul class="list-disc pl-6 text-gray-700 mb-4 space-y-2">
              <li>Breach of these Terms</li>
              <li>Fraudulent or illegal activity</li>
              <li>Providing false information</li>
              <li>Violation of applicable laws</li>
            </ul>
            <p class="text-gray-700">
              Upon termination, your right to use our services will cease immediately, 
              but these Terms will remain in effect as to any prior use.
            </p>
          </div>

          <!-- Changes to Terms -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Changes to These Terms</h2>
            <p class="text-gray-700 mb-4">
              We reserve the right to modify these Terms at any time. We will notify 
              users of any material changes by:
            </p>
            <ul class="list-disc pl-6 text-gray-700 mb-4 space-y-2">
              <li>Posting updates on our website</li>
              <li>Sending email notifications to registered users</li>
              <li>Displaying prominent notices on our services</li>
            </ul>
            <p class="text-gray-700">
              Your continued use of our services after changes are posted constitutes 
              acceptance of the revised Terms.
            </p>
          </div>

          <!-- Contact Information -->
          <div class="bg-blue-50 rounded-lg border border-blue-200 p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h2>
            <p class="text-gray-700 mb-4">
              If you have any questions about these Terms of Service, please contact us:
            </p>
            <div class="space-y-3">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 3.26a2 2 0 001.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <a href="mailto:legal@internationalautomobileauthority.com" class="text-blue-600 hover:text-blue-800">
                  legal@internationalautomobileauthority.com
                </a>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21L6.16 10.928c-.652.35-.677 1.259-.1 1.837l1.92 1.92c.578.577 1.487.552 1.837-.1l1.541-4.064a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
