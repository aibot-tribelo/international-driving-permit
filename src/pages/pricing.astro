---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import pricingData from '../data/pricing.json';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "International Driving Permit",
  "description": "Official International Driving Permit valid in 195+ countries worldwide",
  "offers": pricingData.plans.map(plan => ({
    "@type": "Offer",
    "name": plan.name,
    "price": plan.price.replace('$', ''),
    "priceCurrency": "USD",
    "description": plan.subtitle,
    "availability": "https://schema.org/InStock"
  }))
};
---

<Layout 
  title="Pricing - International Driving Permit Plans"
  description="Choose the perfect International Driving Permit plan for your travel needs. Digital delivery from $49. Physical booklets available. 100% money-back guarantee."
  structuredData={structuredData}
>
  <Navigation />
  
  <main id="main-content">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-12 lg:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 leading-tight mb-6">
            Choose Your IDP Plan
          </h1>
          <p class="text-xl text-gray-700 leading-relaxed max-w-3xl mx-auto mb-8">
            Fast, reliable International Driving Permits with instant digital delivery and worldwide shipping. 
            Choose the plan that fits your travel needs.
          </p>
          
          <!-- Trust indicators -->
          <div class="flex flex-wrap justify-center gap-6 text-sm text-gray-600">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              100% Money-Back Guarantee
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Valid in 195+ Countries
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              500K+ Satisfied Customers
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing Plans -->
    <section class="bg-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Plans Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
          {pricingData.plans.map((plan) => (
            <div class={`relative rounded-2xl border-2 p-8 ${plan.mostPopular ? 'border-blue-500 bg-blue-50' : 'border-gray-200 bg-white'}`}>
              {plan.mostPopular && (
                <div class="absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
                  <span class="bg-blue-500 text-white px-4 py-1 rounded-full text-sm font-medium">
                    Most Popular
                  </span>
                </div>
              )}
              
              <div class="text-center">
                <h3 class="text-2xl font-bold text-gray-900 mb-2">{plan.name}</h3>
                <p class="text-gray-600 mb-6">{plan.subtitle}</p>
                
                <div class="mb-6">
                  <div class="flex items-center justify-center">
                    <span class="text-4xl font-bold text-gray-900">{plan.price}</span>
                    {plan.originalPrice && (
                      <span class="text-xl text-gray-400 line-through ml-2">{plan.originalPrice}</span>
                    )}
                  </div>
                  {plan.discount && (
                    <span class="bg-red-100 text-red-700 text-sm font-medium px-2 py-1 rounded-full mt-2 inline-block">
                      {plan.discount}
                    </span>
                  )}
                </div>

                <div class="space-y-2 mb-6 text-sm">
                  <div class="flex items-center justify-center text-gray-600">
                    <svg class="w-4 h-4 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    Processing: {plan.processingTime}
                  </div>
                  <div class="flex items-center justify-center text-gray-600">
                    <svg class="w-4 h-4 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    Valid for: {plan.validity}
                  </div>
                </div>

                <a 
                  href={plan.buttonUrl}
                  class={`w-full font-semibold py-3 px-6 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 text-center block ${
                    plan.mostPopular 
                      ? 'bg-blue-600 hover:bg-blue-700 text-white focus:ring-blue-500' 
                      : 'bg-gray-900 hover:bg-black text-white focus:ring-gray-500'
                  }`}
                >
                  {plan.buttonText}
                </a>
              </div>

              <div class="mt-8">
                <h4 class="font-semibold text-gray-900 mb-4">What's included:</h4>
                <ul class="space-y-2 text-sm">
                  {plan.features.map((feature) => (
                    <li class={`flex items-start ${feature.startsWith('✅') ? 'text-gray-700' : 'text-gray-400'}`}>
                      <span class="mr-2 flex-shrink-0">{feature.charAt(0)}</span>
                      <span>{feature.slice(2)}</span>
                    </li>
                  ))}
                </ul>
                
                <div class="mt-6 p-4 bg-gray-50 rounded-lg">
                  <p class="text-xs text-gray-600">
                    <strong>Perfect for:</strong> {plan.idealFor}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Additional Services -->
        <div class="bg-gray-50 rounded-xl p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">Optional Add-On Services</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {pricingData.additionalServices.map((service) => (
              <div class="bg-white rounded-lg p-4 text-center">
                <h3 class="font-semibold text-gray-900 mb-2">{service.name}</h3>
                <p class="text-sm text-gray-600 mb-3">{service.description}</p>
                <span class="text-lg font-bold text-blue-600">{service.price}</span>
              </div>
            ))}
          </div>
        </div>

        <!-- Guarantees -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
          {pricingData.guarantees.map((guarantee) => (
            <div class="text-center p-6">
              <div class="text-3xl mb-3">{guarantee.icon}</div>
              <h3 class="font-semibold text-gray-900 mb-2">{guarantee.title}</h3>
              <p class="text-sm text-gray-600">{guarantee.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="bg-blue-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">What Our Customers Say</h2>
          <p class="text-xl text-gray-600">Real reviews from travelers who chose our IDP service</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {pricingData.testimonials.map((testimonial) => (
            <div class="bg-white p-6 rounded-lg shadow-sm">
              <div class="flex mb-4">
                {Array.from({length: 5}).map((_, i) => (
                  <svg 
                    class={`w-5 h-5 ${i < testimonial.rating ? 'text-yellow-400' : 'text-gray-300'}`} 
                    fill="currentColor" 
                    viewBox="0 0 20 20"
                    aria-hidden="true"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <p class="text-gray-700 mb-4 italic">"{testimonial.text}"</p>
              <div class="border-t pt-4">
                <p class="font-semibold text-gray-900">{testimonial.name}</p>
                <p class="text-sm text-gray-600">{testimonial.country}</p>
                <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full mt-1 capitalize">
                  {testimonial.plan} Plan
                </span>
                {testimonial.verified && (
                  <span class="ml-1 text-green-600 text-xs">✓ Verified</span>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="bg-white py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Pricing FAQ</h2>
          <p class="text-xl text-gray-600">Common questions about our IDP plans and pricing</p>
        </div>

        <div class="space-y-6">
          {pricingData.faq.map((faq) => (
            <details class="group bg-gray-50 rounded-lg">
              <summary class="flex justify-between items-center p-6 cursor-pointer focus:outline-none focus:bg-gray-100 list-none">
                <h3 class="font-semibold text-gray-900">{faq.question}</h3>
                <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="px-6 pb-6 text-gray-600">
                {faq.answer}
              </div>
            </details>
          ))}
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="bg-blue-600 py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
          Ready to Start Your International Adventure?
        </h2>
        <p class="text-xl text-blue-100 mb-8">
          Choose your plan and get your International Driving Permit in minutes. 
          Join over 500,000 travelers who trust our service worldwide.
        </p>
        <a 
          href="/apply"
          class="bg-white hover:bg-gray-100 text-blue-600 font-bold py-4 px-8 rounded-lg text-lg transition-colors focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue-600 inline-block"
        >
          Get Your IDP Now →
        </a>
        <p class="text-blue-200 text-sm mt-4">
          ✅ 5-minute processing • ✅ Worldwide acceptance • ✅ 100% satisfaction guarantee
        </p>
      </div>
    </section>
  </main>

  <Footer />
</Layout>