---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Verify IDP - Track Your Order",
  "description": "Track your International Driving Permit application status, download your digital IDP, or verify the authenticity of an existing permit.",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "/verify?order={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};
---

<Layout 
  title="Verify IDP - Track Your Order | International Driving Permit Authority"
  description="Track your International Driving Permit application status, download your digital IDP, or verify the authenticity of an existing permit."
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <Navigation />
  
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-white">
    <!-- Skip Navigation -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-blue-600 text-white px-4 py-2 rounded-md z-50">
      Skip to main content
    </a>

    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Verify & Track Your IDP</h1>
          <p class="text-xl md:text-2xl mb-8 opacity-90">
            Check your application status, download your digital permit, or verify authenticity
          </p>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <section id="main-content" class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <!-- Quick Actions -->
          <div class="grid md:grid-cols-3 gap-8 mb-16">
            <div class="text-center p-8 bg-white rounded-lg shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
              <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Track Application</h3>
              <p class="text-gray-700 mb-4">
                Check the status of your International Driving Permit application
              </p>
              <button 
                onclick="showTrackingForm()" 
                class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium"
                aria-describedby="track-description"
              >
                Track Order
              </button>
              <p id="track-description" class="sr-only">Enter your order information to track application status</p>
            </div>

            <div class="text-center p-8 bg-white rounded-lg shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
              <div class="bg-green-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Download Digital IDP</h3>
              <p class="text-gray-700 mb-4">
                Access and download your digital International Driving Permit
              </p>
              <button 
                onclick="showDownloadForm()" 
                class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-colors font-medium"
                aria-describedby="download-description"
              >
                Download IDP
              </button>
              <p id="download-description" class="sr-only">Enter your order information to download digital IDP</p>
            </div>

            <div class="text-center p-8 bg-white rounded-lg shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
              <div class="bg-purple-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Verify Authenticity</h3>
              <p class="text-gray-700 mb-4">
                Verify the authenticity of an International Driving Permit
              </p>
              <button 
                onclick="showVerifyForm()" 
                class="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition-colors font-medium"
                aria-describedby="verify-description"
              >
                Verify IDP
              </button>
              <p id="verify-description" class="sr-only">Enter IDP details to verify authenticity</p>
            </div>
          </div>

          <!-- Forms Container -->
          <div id="forms-container" class="space-y-8">
            <!-- Track Application Form -->
            <div id="tracking-form" class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 hidden">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Track Your Application</h2>
                <button onclick="hideForms()" class="text-gray-500 hover:text-gray-700">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>

              <form class="space-y-6">
                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label for="track-order-number" class="block text-sm font-medium text-gray-700 mb-2">
                      Order Number *
                    </label>
                    <input 
                      type="text" 
                      id="track-order-number" 
                      name="orderNumber" 
                      required
                      placeholder="e.g., IDP-2026-001234"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                      aria-describedby="order-number-help"
                    >
                    <p id="order-number-help" class="mt-1 text-sm text-gray-600">
                      Found in your confirmation email
                    </p>
                  </div>

                  <div>
                    <label for="track-email" class="block text-sm font-medium text-gray-700 mb-2">
                      Email Address *
                    </label>
                    <input 
                      type="email" 
                      id="track-email" 
                      name="email" 
                      required
                      placeholder="your.email@example.com"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                  </div>
                </div>

                <button 
                  type="submit" 
                  class="w-full bg-blue-600 text-white py-4 px-6 rounded-lg hover:bg-blue-700 transition-colors font-medium"
                >
                  Track Application Status
                </button>
              </form>
            </div>

            <!-- Download Form -->
            <div id="download-form" class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 hidden">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Download Digital IDP</h2>
                <button onclick="hideForms()" class="text-gray-500 hover:text-gray-700">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>

              <form class="space-y-6">
                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label for="download-order-number" class="block text-sm font-medium text-gray-700 mb-2">
                      Order Number *
                    </label>
                    <input 
                      type="text" 
                      id="download-order-number" 
                      name="orderNumber" 
                      required
                      placeholder="e.g., IDP-2026-001234"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500"
                    >
                  </div>

                  <div>
                    <label for="download-email" class="block text-sm font-medium text-gray-700 mb-2">
                      Email Address *
                    </label>
                    <input 
                      type="email" 
                      id="download-email" 
                      name="email" 
                      required
                      placeholder="your.email@example.com"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500"
                    >
                  </div>
                </div>

                <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                  <div class="flex items-start">
                    <svg class="w-5 h-5 text-green-600 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                      <h4 class="font-medium text-green-900 mb-1">Digital IDP Usage</h4>
                      <p class="text-green-800 text-sm">
                        Your digital IDP is valid in most countries. However, some destinations (like UAE and Saudi Arabia) 
                        may require a physical booklet. Check destination requirements before traveling.
                      </p>
                    </div>
                  </div>
                </div>

                <button 
                  type="submit" 
                  class="w-full bg-green-600 text-white py-4 px-6 rounded-lg hover:bg-green-700 transition-colors font-medium"
                >
                  Download Digital IDP
                </button>
              </form>
            </div>

            <!-- Verify Form -->
            <div id="verify-form" class="bg-white rounded-lg shadow-lg border border-gray-100 p-8 hidden">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Verify IDP Authenticity</h2>
                <button onclick="hideForms()" class="text-gray-500 hover:text-gray-700">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>

              <form class="space-y-6">
                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label for="verify-permit-number" class="block text-sm font-medium text-gray-700 mb-2">
                      IDP Permit Number *
                    </label>
                    <input 
                      type="text" 
                      id="verify-permit-number" 
                      name="permitNumber" 
                      required
                      placeholder="e.g., IDP-GB-2026-001234"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                      aria-describedby="permit-number-help"
                    >
                    <p id="permit-number-help" class="mt-1 text-sm text-gray-600">
                      Found on the front of your IDP booklet
                    </p>
                  </div>

                  <div>
                    <label for="verify-issue-date" class="block text-sm font-medium text-gray-700 mb-2">
                      Issue Date *
                    </label>
                    <input 
                      type="date" 
                      id="verify-issue-date" 
                      name="issueDate" 
                      required
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                    >
                  </div>
                </div>

                <div>
                  <label for="verify-holder-name" class="block text-sm font-medium text-gray-700 mb-2">
                    Permit Holder Name *
                  </label>
                  <input 
                    type="text" 
                    id="verify-holder-name" 
                    name="holderName" 
                    required
                    placeholder="Full name as it appears on the IDP"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                  >
                </div>

                <button 
                  type="submit" 
                  class="w-full bg-purple-600 text-white py-4 px-6 rounded-lg hover:bg-purple-700 transition-colors font-medium"
                >
                  Verify IDP Authenticity
                </button>
              </form>
            </div>
          </div>

          <!-- Additional Information -->
          <div class="mt-16 grid md:grid-cols-2 gap-8">
            <!-- Status Guide -->
            <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8">
              <h3 class="text-xl font-bold text-gray-900 mb-6">Application Status Guide</h3>
              <div class="space-y-4">
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center mr-4">
                    <span class="text-yellow-600 font-bold text-sm">1</span>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-900">Submitted</h4>
                    <p class="text-gray-600 text-sm">Application received and payment confirmed</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                    <span class="text-blue-600 font-bold text-sm">2</span>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-900">Under Review</h4>
                    <p class="text-gray-600 text-sm">Documents being verified and processed</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-4">
                    <span class="text-green-600 font-bold text-sm">3</span>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-900">Approved</h4>
                    <p class="text-gray-600 text-sm">IDP issued and digital copy available</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="flex-shrink-0 w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center mr-4">
                    <span class="text-purple-600 font-bold text-sm">4</span>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-900">Shipped</h4>
                    <p class="text-gray-600 text-sm">Physical booklet dispatched (if ordered)</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Help & Support -->
            <div class="bg-blue-50 rounded-lg border border-blue-200 p-8">
              <h3 class="text-xl font-bold text-gray-900 mb-6">Need Help?</h3>
              <div class="space-y-4">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 3.26a2 2 0 001.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  <div>
                    <h4 class="font-medium text-gray-900 mb-1">Can't find your order?</h4>
                    <p class="text-gray-700 text-sm">Check your email for the order confirmation or contact support</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  <div>
                    <h4 class="font-medium text-gray-900 mb-1">Download issues?</h4>
                    <p class="text-gray-700 text-sm">We'll resend your digital IDP to your email address</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
                  </svg>
                  <div>
                    <h4 class="font-medium text-gray-900 mb-1">24/7 Support</h4>
                    <p class="text-gray-700 text-sm mb-2">Our support team is always available to help</p>
                    <div class="space-y-1">
                      <a href="tel:+1-800-IDP-HELP" class="text-blue-600 hover:text-blue-800 text-sm block">
                        üìû +1-800-IDP-HELP
                      </a>
                      <a href="mailto:support@internationalautomobileauthority.com" class="text-blue-600 hover:text-blue-800 text-sm block">
                        ‚úâÔ∏è support@internationalautomobileauthority.com
                      </a>
                      <a href="/contact" class="text-blue-600 hover:text-blue-800 text-sm block">
                        üí¨ Live Chat Support
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <script>
    function showTrackingForm() {
      hideForms();
      document.getElementById('tracking-form').classList.remove('hidden');
      document.getElementById('track-order-number').focus();
    }

    function showDownloadForm() {
      hideForms();
      document.getElementById('download-form').classList.remove('hidden');
      document.getElementById('download-order-number').focus();
    }

    function showVerifyForm() {
      hideForms();
      document.getElementById('verify-form').classList.remove('hidden');
      document.getElementById('verify-permit-number').focus();
    }

    function hideForms() {
      const forms = ['tracking-form', 'download-form', 'verify-form'];
      forms.forEach(formId => {
        document.getElementById(formId).classList.add('hidden');
      });
    }

    // Handle form submissions (these would connect to your backend)
    document.addEventListener('DOMContentLoaded', function() {
      // Tracking form
      document.querySelector('#tracking-form form').addEventListener('submit', function(e) {
        e.preventDefault();
        // Add tracking logic here
        alert('This would connect to your tracking system');
      });

      // Download form
      document.querySelector('#download-form form').addEventListener('submit', function(e) {
        e.preventDefault();
        // Add download logic here
        alert('This would trigger the download of your digital IDP');
      });

      // Verify form
      document.querySelector('#verify-form form').addEventListener('submit', function(e) {
        e.preventDefault();
        // Add verification logic here
        alert('This would verify the IDP authenticity');
      });
    });
  </script>
</Layout>